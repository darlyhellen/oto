<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:background="@color/app_main_header_bg"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/goods_card_cards"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:contentDescription="@string/action_settings"
        android:padding="4dp"
        android:src="@drawable/shoping_cart_select" />

    <ImageView
        android:id="@+id/goods_card_collect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:contentDescription="@string/action_settings"
        android:padding="4dp"
        android:src="@drawable/ic_uncollect" />

    <Button
        android:id="@+id/goods_card_buy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_weight="3"
        android:background="@drawable/btn_select"
        android:padding="4dp"
        android:text="@string/action_settings" />

</LinearLayout>
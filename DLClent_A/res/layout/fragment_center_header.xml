<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.darly.dlclent"
    android:id="@+id/center_header_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_login_table_bg"
    android:gravity="center" >

    <com.darly.dlclent.widget.roundedimage.RoundedImageView
        android:id="@+id/center_header_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:contentDescription="@string/action_settings"
        app:riv_border_color="@color/wel_click_color"
        app:riv_border_width="2dp"
        android:scaleType="center"
        app:riv_corner_radius="100dp" />

    <TextView
        android:id="@+id/center_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
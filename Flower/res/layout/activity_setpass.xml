<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <com.hellen.widget.header.HeaderView
        android:id="@+id/setpass_header_view"
        android:layout_width="match_parent"
        android:layout_height="48dp" >
    </com.hellen.widget.header.HeaderView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/app_login_shape"
        android:orientation="vertical" >

        <com.hellen.widget.clearedit.LoginClearEdit
            android:id="@+id/act_pass_setpass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/wel_back_color" />

        <com.hellen.widget.clearedit.LoginClearEdit
            android:id="@+id/act_pass_repass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />
    </LinearLayout>

    <Button
        android:id="@+id/act_pass_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_select"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_page_backgroud"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/flat_flat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_select"
        android:text="LoadFromFlatBuffer" />

    <Button
        android:id="@+id/flat_json"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_select"
        android:text="LoadFromJSON" />

    <TextView
        android:id="@+id/flat_flat_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/flat_json_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>